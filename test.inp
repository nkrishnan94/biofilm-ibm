dimension       3
variable        x equal 100
variable        z equal 6
lattice         sc 0.8442
region          box block 0 $x 0 $z -0.5 0.5
create_box      1 box

variable        xx internal 0.0
variable        zz internal 0.0
variable        v equal "1>0"
create_atoms    1 box var v set x xx set z zz
write_dump      all xyz sinusoid.xyz